<UserControl
    x:Class="Designer.Parts.PropertiesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls1="using:Coding4Fun.Toolkit.Controls"
    xmlns:converters="using:Designer.Converters"
    xmlns:objEditor="using:Zafiro.Uwp.Controls.ObjEditor"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:items="using:Designer.Domain.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance items:Project}">

    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <converters:ColorConverter x:Key="ColorConverter" />
    </UserControl.Resources>

    <objEditor:ObjectEditor SelectedItems="{Binding SelectedDocument.SelectedItems}" Margin="4">
        <objEditor:ObjectEditor.Editors>
            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <Grid>
                            <Button BorderThickness="1" BorderBrush="Black" VerticalAlignment="Stretch" Height="32" HorizontalAlignment="Stretch" Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}">
                                <Button.Flyout>
                                    <Flyout>
                                        <controls1:ColorPicker Height="200" Width="200" Color="{Binding Value, Converter={StaticResource ColorConverter}, Mode=TwoWay}" />
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="Designer.Domain.Models.Color, Designer.Domain.Models"  />
                </objEditor:Editor.Key>
            </objEditor:Editor>
            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <StackPanel>
                            <TextBox Text="{Binding Value, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.String, mscorlib" PropertyName="Text" />
                </objEditor:Editor.Key>
            </objEditor:Editor>
            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <Slider Value="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.Double, mscorlib" PropertyName="CornerRadius" />
                </objEditor:Editor.Key>
            </objEditor:Editor>

            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <Slider Value="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.Double, mscorlib" PropertyName="Distance" />
                </objEditor:Editor.Key>
            </objEditor:Editor>

            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <Slider Value="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.Double, mscorlib" PropertyName="StrokeThickness" />
                </objEditor:Editor.Key>
            </objEditor:Editor>

            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <Slider Minimum="0" Maximum="1" StepFrequency="0.1" LargeChange="0.2" TickFrequency="0.1" Value="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.Double, mscorlib" PropertyName="BackgroundTint" />
                </objEditor:Editor.Key>
            </objEditor:Editor>

            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <controls:RadialGauge MaxAngle="360" Maximum="360" IsInteractive="True" Value="{Binding Value, Mode=TwoWay}"
                                              Minimum="0"
                                              StepSize="5"
                                              TickSpacing="22"
                                              ScaleWidth="12"
                                              MinAngle="0"
                                              Unit="units"
                                              NeedleWidth="1"
                                              NeedleLength="52" 
                                              TickLength="6"
                                              TickWidth="0"
                                              ScalePadding="48"
                                              ScaleTickWidth="2" MaxHeight="120"/>
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.Double, mscorlib" PropertyName="Angle" />
                </objEditor:Editor.Key>
            </objEditor:Editor>

        </objEditor:ObjectEditor.Editors>
    </objEditor:ObjectEditor>
</UserControl>