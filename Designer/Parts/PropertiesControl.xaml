<UserControl
    x:Class="Designer.Parts.PropertiesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls1="using:Coding4Fun.Toolkit.Controls"
    xmlns:designer="using:Designer"
    xmlns:converters="using:Designer.Converters"
    xmlns:objEditor="using:Zafiro.Uwp.Controls.ObjEditor"
    xmlns:lightweight="using:Zafiro.Uwp.Controls.Lightweight"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance designer:MainViewModel}">

    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <converters:ColorConverter x:Key="ColorConverter" />
    </UserControl.Resources>

    <objEditor:ObjectEditor SelectedItems="{Binding SelectedDocument.SelectedItems}" Margin="4">
        <objEditor:ObjectEditor.Editors>
            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <Grid>
                            <Button BorderThickness="1" BorderBrush="Black" VerticalAlignment="Stretch" Height="32" HorizontalAlignment="Stretch" Background="{Binding Value, Converter={StaticResource ColorToBrushConverter}}">
                                <Button.Flyout>
                                    <Flyout>
                                        <controls1:ColorPicker Height="200" Width="200" Color="{Binding Value, Converter={StaticResource ColorConverter}, Mode=TwoWay}" />
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="Designer.Model.Color, Designer.Model"  />
                </objEditor:Editor.Key>
            </objEditor:Editor>
            <objEditor:Editor>
                <objEditor:Editor.Template>
                    <DataTemplate x:DataType="objEditor:PropertyItem">
                        <StackPanel>
                            <controls:TextToolbar x:Name="Toolbar"
                                                  Editor="{Binding ElementName=EditZone}"
                                                  IsEnabled="True"
                                                  Format="RichText"
                                                  FontSize="10"
                                                  UseURIChecker="True"
                                                  Background="#4C4F4F4F" />
                            <lightweight:RichEditBoxEx x:Name="EditZone" Text="{Binding Value, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </objEditor:Editor.Template>
                <objEditor:Editor.Key>
                    <objEditor:EditorKey TargetTypeString="System.String, mscorlib" PropertyName="Text" />
                </objEditor:Editor.Key>
            </objEditor:Editor>
        </objEditor:ObjectEditor.Editors>
    </objEditor:ObjectEditor>
</UserControl>