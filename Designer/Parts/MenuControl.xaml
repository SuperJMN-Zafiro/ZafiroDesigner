<UserControl
    x:Class="Designer.Parts.MenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Designer.Parts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:designer="using:Designer"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance designer:MainViewModel}">

    <controls:Menu>
        <controls:MenuItem Header="File">
            <MenuFlyoutItem Text="Open" Command="{Binding PickFileCommand}" />
        </controls:MenuItem>
        <controls:MenuItem Header="Transform">
            <MenuFlyoutItem Text="Align to left" Command="{Binding AlignCommands.AlignToLeftCommand}" />
            <MenuFlyoutItem Text="Align to right" Command="{Binding AlignCommands.AlignToRightCommand}" />
            <MenuFlyoutItem Text="Align to top" Command="{Binding AlignCommands.AlignToTopCommand}" />
            <MenuFlyoutItem Text="Align to bottom" Command="{Binding AlignCommands.AlignToBottomCommand}" />
        </controls:MenuItem>
    </controls:Menu>
</UserControl>
