<UserControl
    x:Class="Designer.Parts.ToolsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Designer.Parts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tools="using:Designer.Tools"
    xmlns:converters="using:Designer.Converters"
    xmlns:valueConverters="using:ValueConverters"
    xmlns:designer="using:Designer"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance designer:MainViewModel}">

    <UserControl.Resources>
        <converters:ValueConverterGroup x:Key="ToolTypeToImageConverter">
            <converters:TypeNameConverter />
            <valueConverters:StringToObjectConverter>
                <valueConverters:StringToObjectConverter.Items>
                    <ResourceDictionary>
                        <BitmapImage x:Key="RectangleTool" UriSource="/Assets/Tools/Rectangle.png" />
                        <BitmapImage x:Key="EllipseTool" UriSource="/Assets/Tools/Ellipse.png" />
                        <BitmapImage x:Key="TextTool" UriSource="/Assets/Tools/Text.png" />
                        <BitmapImage x:Key="LineTool" UriSource="/Assets/Tools/Line.png" />
                        <BitmapImage x:Key="ImageTool" UriSource="/Assets/Tools/Image.png" />
                    </ResourceDictionary>
                </valueConverters:StringToObjectConverter.Items>
            </valueConverters:StringToObjectConverter>
        </converters:ValueConverterGroup>

    </UserControl.Resources>

    <Border Background="{ThemeResource AccentButtonBackground}">
        <ItemsControl ItemsSource="{Binding Tools}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding CreateCommand}" Background="Transparent"
                            d:DataContext="{d:DesignInstance tools:Tool}">

                        <Button.Content>
                            <Image Width="25" Height="25"
                                   Source="{Binding Converter={StaticResource ToolTypeToImageConverter}}" />
                        </Button.Content>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>



